<div class="container">
  <h4 class="mt-5 mb-4 text-center"style="background-color: #ECECEC; width: 300px;"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
  <%= form_with(model: @customer, url: admin_customer_path(@customer), method: :patch) do |form| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td class="text-left"><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td class="text-left row"><%= form.text_field :last_name, class: 'form-control col-lg-4' %><%= form.text_field :first_name, class: 'form-control col-lg-4 offset-lg-1' %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td class="text-left row"><%= form.text_field :last_name_kana, class: 'form-control col-lg-4' %><%= form.text_field :first_name_kana, class: 'form-control col-lg-4 offset-lg-1' %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td class="text-left row"><%= form.text_field :post_code, class: 'form-control col-lg-4' %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td class="text-left row"><%= form.text_field :address, class: 'form-control' %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td class="text-left row"><%= form.text_field :phone_number, class: 'form-control col-lg-4' %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td class="text-left row"><%= form.email_field :email, class: 'form-control col-lg-4' %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
            <td class="text-left">
              <%= form.radio_button :is_delete, false, checked: !@customer.is_delete %>
                <%= form.label :is_delete, '有効', class: 'text-success'%>
              <%= form.radio_button :is_delete, true, checked: @customer.is_delete %>
            <%= form.label :is_delete, '退会', class: 'text-danger'%>
          </td>
      </tbody>
    </table>
    <div class="text-center">
      <%= form.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

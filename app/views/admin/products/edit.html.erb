<div class="container my-5">
  <div class="row">
    <h2>商品編集</h2>
  </div>

    <%= form_for(@product, url: admin_product_path) do |f| %>
    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :商品画像 %>
        <%= f.file_field :image %>
      </div>

      <div class="col-sm-5">
        <div class="form-group row">
          <%= f.label :商品名, class: "col-sm-4" %>
          <%= f.text_field :name, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :商品説明, class: "col-sm-4" %>
          <%= f.text_area :description, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :ジャンル, class: "col-sm-4" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :税抜き価格, class: "col-sm-4" %>
          <%= f.text_field :price, class: "form-control col-sm-7" %>
          <span class="mt-auto ml-3">円</span>
        </div>

        <div class="form-group row">
          <%= f.label :販売ステータス, class: "col-sm-4" %>
          <div>
            <%= f.radio_button :is_sold_out, false %>
            <%= f.label :is_sold_out, '販売中', value: false %>
          </div>
          <div>
            <%= f.radio_button :is_sold_out, true %>
            <%= f.label :is_sold_out, '販売停止', value: true %>
          </div>
        </div>
      </div>

      <div class="col-sm-3 mt-auto ml-5">
        <%= f.submit :変更を保存する, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>
<div>
  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-sm-10 px-sm-0 offset-sm-1">
        <h2>ジャンル一覧・追加</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10 px-sm-0 offset-sm-1">
        <%= form_with model: @genre,  url: admin_genres_path, method: :post,local: true do |f| %>
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name %>
          <%= f.submit "新規登録", class:"btn btn-success ml-5 py-1" %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-3 mt-3">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th colspan="1"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success py-0" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
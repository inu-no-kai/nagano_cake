<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, "(姓)" %>
    <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_name, "(名)" %>
    <%= f.text_field :last_name, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "(セイ)" %>
    <%= f.text_field :first_name_kana, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "(メイ)" %>
    <%= f.text_field :last_name_kana, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, required: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, required: true, autocomplete: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, required: true, autocomplete: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone_number, required: true, autocomplete: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <%= f.password_field :password, required: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<div>
  <a><%= link_to "こちら", new_customer_session_path %>からログインしてください。</a>
</div>

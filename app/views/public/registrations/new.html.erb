<div class="container mt-5 mb-5">
   <div class="row my-3">
     <div class="col-sm-8 px-sm-0 offset-sm-1">
       <h2>新規会員登録</h2>
     </div>
   </div>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="mb-3 row">
        <div class="col-2 offset-md-1"><%= f.label "名前" %></div>
        <div class="col-1 text-right pr-0"><%= f.label :first_name, "(姓)" %></div>
        <div class="col-1"><%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control', :size => "10", placeholder: "令和" %></div>
        <div class="col-1 text-right pr-0"><%= f.label :last_name, "(名)" %></div>
        <div class="col-1"><%= f.text_field :last_name, required: true, class: 'form-control', :size => "10", placeholder: "道子" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-2 offset-md-1"><%= f.label "フリガナ" %></div>
        <div class="col-1 text-right pr-0"><%= f.label :first_name_kana, "(セイ)" %></div>
        <div class="col-1"><%= f.text_field :first_name_kana, required: true, class: 'form-control', :size => "10", placeholder: "レイワ" %></div>
        <div class="col-1 text-right pr-0"><%= f.label :last_name_kana, "(メイ)" %></div>
        <div class="col-1"><%= f.text_field :last_name_kana, required: true, class: 'form-control', :size => "10", placeholder: "ミチコ" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-3 offset-md-1"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-1"><%= f.email_field :email, required: true, autocomplete: "email", :size => "30", placeholder: "sample@example.com" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-3 offset-md-1"><%= f.label :post_code, "郵便番号(ハイフンなし)" %></div>
        <div class="col-1"><%= f.text_field :post_code, required: true, autocomplete: 'form-control', :size => "7", placeholder: "0000000" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-3 offset-md-1"><%= f.label :address, "住所" %></div>
        <div class="col-1"><%= f.text_field :address, required: true, autocomplete: 'form-control', :size => "40", placeholder: "東京都渋谷区代々木神園町0-0" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-3 offset-md-1"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></div>
        <div class="col-1"><%= f.text_field :phone_number, required: true, autocomplete: 'form-control', :size => "15", placeholder: "00000000000" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-3 offset-md-1"><%= f.label :password, "パスワード(6文字以上)" %></div>
        <div class="col-1"><%= f.password_field :password, required: true, autocomplete: "new-password", :size => "6" %></div>
      </div>

      <div class="mb-3 row">
        <div class="col-3 offset-md-1"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
        <div class="col-1"><%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", :size => "6" %></div>
      </div>

      <div class="mb-3 row">
       <div class="col-3 offset-md-1"></div>
       <div class="col-1"><%= f.submit "新規登録", class:"btn btn-success" %></div>
      </div>
    <% end %>
    <div class="mb-3 row">
      <div class="col-sm-8 px-sm-0 offset-sm-1"><h2>既に登録済みの方</h2></div>
    </div>
      <div class="mb-3 row">
        <div class="col-sm-8 px-sm-0 offset-sm-1"><a><%= link_to "こちら", new_customer_session_path %>からログインしてください。</a></div>
      </div>

</div>
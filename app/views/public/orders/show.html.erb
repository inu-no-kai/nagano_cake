<div class="container">
  <div class="row">
    <div class="col-4 mt-4">
      <h4 class="mb-4">注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.delivery_address %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4 mt-4">
      <h4 class="mb-4">請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= @order.invoice_amount %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.invoice_amount + @order.postage %></td>
        </tr>
      </table>
    </div>
    <div class="col-12 mt-4">
      <h4 class="mb-4">注文内容</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |detail| %>
            <tr>
              <td><%= detail.product.name %></td>
              <td><%= detail.price %></td>
              <td><%= detail.quantity %></td>
              <td><%= detail.price * detail.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

